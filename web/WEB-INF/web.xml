<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>control</servlet-name>
        <servlet-class>acciones.Control</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenVideojuego</servlet-name>
        <servlet-class>acciones.ObtenVideojuego</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregaVideojuego</servlet-name>
        <servlet-class>acciones.AgregaVideojuego</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenVideojuegos</servlet-name>
        <servlet-class>acciones.ObtenVideojuegos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>control</servlet-name>
        <url-pattern>/control</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenVideojuego</servlet-name>
        <url-pattern>/obtenVideojuego</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregaVideojuego</servlet-name>
        <url-pattern>/agregaVideojuego</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenVideojuegos</servlet-name>
        <url-pattern>/obtenVideojuegos</url-pattern>
    </servlet-mapping>
  
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
